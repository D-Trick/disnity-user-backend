{
    "name": "disnity-user-backend",
    "version": "3.0.1",
    "description": "Disnity User Backend",
    "author": "Trick",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "NODE_ENV=production nest start",
        "start:dev": "rm -rf ./dist && NODE_ENV=development nest start --watch",
        "start:dev:pm2": "NODE_ENV=development pm2 start pm2.config.js",
        "start:prod": "NODE_ENV=production pm2 start pm2.config.js",
        "start:debug": "NODE_ENV=development nest start --debug --watch",
        "build": "nest build",
        "prebuild": "rimraf dist",
        "reload:dev": "NODE_ENV=development pm2 reload pm2.config.js",
        "reload": "NODE_ENV=production pm2 reload pm2.config.js",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/axios": "^3.0.0",
        "@nestjs/cache-manager": "^2.1.0",
        "@nestjs/common": "^10.1.3",
        "@nestjs/core": "^10.1.3",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/mapped-types": "^2.0.2",
        "@nestjs/microservices": "^10.1.3",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.1.3",
        "@nestjs/typeorm": "^10.0.0",
        "axios": "^1.4.0",
        "cache-manager": "^5.2.3",
        "cache-manager-redis-yet": "^4.1.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "dayjs": "^1.11.9",
        "dotenv": "^16.3.1",
        "ioredis": "^5.3.2",
        "lodash": "^4.17.21",
        "mysql2": "^3.5.2",
        "nest-winston": "^1.9.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-oauth2": "^1.7.0",
        "reflect-metadata": "^0.1.13",
        "request-ip": "^3.3.0",
        "rimraf": "^5.0.1",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.17",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.11",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.1.3",
        "@types/cache-manager": "^4.0.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.3",
        "@types/lodash": "^4.14.196",
        "@types/node": "^20.4.5",
        "@types/passport-jwt": "^3.0.9",
        "@types/passport-oauth2": "^1.4.12",
        "@types/request-ip": "^0.0.38",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.6.2",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "packageManager": "yarn@1.22.19"
}
